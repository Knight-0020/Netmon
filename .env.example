# NetMon v3 Configuration

# Server
SERVER_PORT=8000
# Database
POSTGRES_USER=netmon
POSTGRES_PASSWORD=netmon
POSTGRES_DB=netmon
POSTGRES_HOST=127.0.0.1
POSTGRES_PORT=5432

# Agent
# Comma separated target IPs for internet health check
PING_TARGETS=1.1.1.1,8.8.8.8
# Check interval for internet health (seconds)
INTERNET_CHECK_INTERVAL=30
# Check interval for LAN scan (seconds)
SCAN_INTERVAL_SEC=20
# LAN CIDR to scan
LAN_CIDR=192.168.1.0/24

# Alerting (Telegram)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# UI
# No specific env vars needed for UI build as it uses relative API paths
